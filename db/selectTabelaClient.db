-- Consulta para obter informações sobre o cliente Iago Sanches
SELECT 
    c.name AS user,
    p.name AS plan,
    dw.day_of_week,
    w.workout_type,
    e.name AS exercise,
    e.muscle_group
FROM 
    users c
JOIN 
    users_plans cp ON c.id = cp.user_id
JOIN 
    plans p ON cp.plan_id = p.id
JOIN 
    workouts w ON c.id = w.user_id
JOIN 
    exercises_workout ew ON w.id = ew.workout_id
JOIN 
    exercises e ON ew.exercise_id = e.id
JOIN 
    days_workout dw ON c.id = dw.user_id AND w.id = dw.workout_id
WHERE 
    c.name = 'Iago Sanches'
ORDER BY 
    dw.day_of_week, w.workout_type, e.name;